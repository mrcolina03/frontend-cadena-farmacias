// src/tsconfig.json
{
  "compilerOptions": {
    "target": "ES2020",
    "useDefineForClassFields": true,
    /* ⚠️ CAMBIO AQUÍ: Reemplaza "DOMAwaits" por "DOM.Iterable" (o elimínalo si no lo requieres) */
    "lib": ["ES2020", "DOM", "DOM.Iterable"], 
    "module": "ESNext",
    "skipLibCheck": true,

    /* Bundler mode */
    "moduleResolution": "bundler",
    "allowImportingTsExtensions": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "jsx": "react-jsx",

    /* Linting */
    "strict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noFallthroughCasesInSwitch": true,

    /* Path aliases for cleaner imports */
    "baseUrl": "./src",
    "paths": {
      "@api/*": ["api/*"],
      "@app/*": ["app/*"],
      "@components/*": ["components/*"],
      "@domains/*": ["domains/*"],
      "@styles/*": ["styles/*"],
      "@types/*": ["types/*"]
    }
  },
  "include": ["src"]
  
}